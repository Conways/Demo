<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/title_style_child_right_text"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w20"
        android:orientation="horizontal">

        <com.conways.demo.home.firstmenu.timewheel.widget.WheelView
            android:id="@+id/activity_timewheel_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.conways.demo.home.firstmenu.timewheel.widget.WheelView
            android:id="@+id/activity_timewheel_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.conways.demo.home.firstmenu.timewheel.widget.WheelView
            android:id="@+id/activity_timewheel_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>
