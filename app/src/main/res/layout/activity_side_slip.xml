<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_side_slip_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/title_style_child_right_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h100"
            android:text="@string/side_slip_introduce"
            android:textColor="@color/main_color"
            android:textSize="@dimen/introduce_size"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_side_slip_left"
        android:layout_width="@dimen/w480"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gray_bg"
        android:orientation="vertical">


        <com.conways.demo.home.firstmenu.sideslip.CircleImageView
            android:id="@+id/activity_side_slip_left_head"
            android:layout_width="@dimen/screenWith1_4"
            android:layout_height="@dimen/screenWith1_4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h80"
            android:src="@mipmap/ic_launcher"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/menu_4_item_spacing"
            android:background="@color/gray_line"/>

        <FrameLayout
            android:id="@+id/activity_side_slip_item_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_4_item_height"
            android:background="@color/white">

            <ImageView
                android:layout_width="@dimen/h48"
                android:layout_height="@dimen/h48"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:src="@drawable/arrow_in"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>

        <FrameLayout
            android:id="@+id/activity_side_slip_item_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_4_item_height"
            android:background="@color/white">

            <ImageView
                android:layout_width="@dimen/h48"
                android:layout_height="@dimen/h48"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:src="@drawable/arrow_in"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>

        <FrameLayout
            android:id="@+id/activity_side_slip_item_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_4_item_height"
            android:background="@color/white">

            <ImageView
                android:layout_width="@dimen/h48"
                android:layout_height="@dimen/h48"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:src="@drawable/arrow_in"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
