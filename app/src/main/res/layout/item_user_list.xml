<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/h150"
              android:background="@color/white"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_user_list_head"
        android:layout_width="@dimen/w120"
        android:layout_height="@dimen/w120"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_user_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/read_long_size"
            android:text="@string/app_name"
            />

        <TextView
            android:id="@+id/item_user_list_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h10"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/gray_main"
            android:textSize="@dimen/introduce_size"
            android:text="@string/app_name"
            />
    </LinearLayout>

</LinearLayout>
